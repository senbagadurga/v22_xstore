  </Action>
  <!-- Bug#101806 Store Open from Status Bar Start -->
    <Action name="TOUCH::OPEN_STORE" keywords="exclude,isForStoreOpen_Special" chainKey="MTO_RETAIL_LOCATION_OPEN_FROM_APP" visible="false" >
    <VisibilityRule class="dtv.pos.systemcycle.access.RetailLocationStateAccessCheck">
      <Parameter name="state" value="CLOSED" />
